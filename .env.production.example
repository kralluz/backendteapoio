# Environment
NODE_ENV=production

# Server
PORT=3333
API_HOST=0.0.0.0

# Database - Configure com suas credenciais de produção
DATABASE_URL="postgresql://usuario:senha@seu-servidor-postgres:5432/teapoio?schema=public"

# JWT Authentication - MUDE ESTES VALORES EM PRODUÇÃO!
JWT_SECRET="gere-um-secret-muito-forte-e-seguro-aqui"
JWT_REFRESH_SECRET="gere-outro-secret-muito-forte-e-seguro-aqui"
ACCESS_TOKEN_EXPIRY=45m
REFRESH_TOKEN_EXPIRY=8h

# CORS - URL do seu frontend em produção
FRONTEND_URL="https://seudominio.com.br"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# Seed - NÃO execute seed em produção!
SEED_DATABASE=false

# Node Options (Memory) - Ajuste conforme necessário
NODE_OPTIONS=--max-old-space-size=4096

# TAG para Docker (usado no docker-compose)
TAG=latest
